[flake8]
ignore = E203, E266, E501, W503, W605, E302
max-line-length = 120
select = B,C,E,F,W,T4,B9
exclude =
    # No need to traverse the git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    openaerostruct/docs/conf.py,
    # Also ignore some files in docs
    openaerostruct/docs/aero_walkthrough/part*.py
    openaerostruct/docs/_utils/docutil.py
    openaerostruct/docs/_utils/patch.py
    # No need for init and setup files
    *__init__.py
    *setup.py
